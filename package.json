  "scripts": {
    "storybook": "start-storybook -p 3001",
    "dev": "gatsby develop -H 0.0.0.0 -p 3000",
    "build:gatsby": "gatsby build",
    "build:storybook": "build-storybook -o public/storybook",
    "build": "run-p build:*",
    "lint": "eslint --ignore-path .gitignore . --ext ts,tsx,js",
    "prettier": "prettier --ignore-path .gitignore \"**/*.{ts,tsx,js,json,md}\"",
    "format": "yarn prettier --write",
    "check-format": "yarn prettier --list-different",
    "check-types": "tsc",
    "validate": "run-p check-format check-types lint build",
    "test": "jest",
    "cic": "node ./scripts/create-icon-component.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,md}": [
      "prettier --ignore-path .gitignore --write"
    ],
    "*.{ts,tsx,js}": [
      "eslint --ignore-path .gitignore --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "date-fns": "^2.9.0",
    "gatsby": "^2.19.5",
    "immer": "^5.3.2",
    "nanoid": "^2.1.10",
    "polished": "^3.4.2",
    "react": "^16.12.0",
    "react-color": "^2.18.0",
    "react-dom": "^16.12.0",
    "react-hook-form": "^4.6.2",
    "react-redux": "^7.1.3",
    "react-simple-timefield": "^3.0.0",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "tailwindcss": "^1.1.4"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@fullhuman/postcss-purgecss": "^2.0.5",
    "@storybook/addon-knobs": "^5.3.9",
    "@storybook/react": "^5.3.9",
    "@svgr/webpack": "^5.1.0",
    "@testing-library/jest-dom": "^5.0.2",
    "@testing-library/react": "^9.4.0",
    "@types/classnames": "^2.2.9",
    "@types/jest": "^24.9.1",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^13.5.0",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/react-redux": "^7.1.7",
    "@types/redux-logger": "^3.0.7",
    "babel-loader": "^8.0.6",
    "babel-preset-react-app": "^9.1.0",
    "eslint": "^6.8.0",
    "eslint-config-rqbazan-ts": "^0.3.1",
    "gatsby-plugin-postcss": "^2.1.19",
    "gatsby-plugin-svgr-loader": "^0.1.0",
    "gatsby-plugin-typescript": "^2.1.26",
    "husky": "^4.2.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.2",
    "npm-run-all": "^4.1.5",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.19.1",
    "ts-jest": "^25.0.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.7.5"
  }
}
